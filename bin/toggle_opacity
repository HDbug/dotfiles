#!/bin/bash
if [[ -z $(ps ax | grep "[c]ompton2") && -z $(ps ax | grep "[c]ompton3") ]]; then
	echo 2
	pkill compton && compton --shadow-exclude '!focused' --config $HOME/dotfiles/compton2.conf
elif [[ -z $(ps ax | grep "[c]ompton3") ]]; then
	echo 3 
	pkill compton && compton --shadow-exclude '!focused' --config $HOME/dotfiles/compton3.conf
else
	echo 1
	pkill compton && compton
fi
